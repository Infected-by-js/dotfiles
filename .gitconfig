[color]
	ui = true
[push]
	followTags = true
	autoSetupRemote = true
[help]
	autocorrect = 1
[status]
  showUntrackedFiles = all
[core]
	fileMode = false
	editor = nvim
[init]
	defaultBranch = main
[rerere]
	enabled = true
[alias]
	hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat --date=relative
	co = checkout
  fa = fetch --all --prune
